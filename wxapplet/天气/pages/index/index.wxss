.header{
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgb(182, 182, 219);
}
.city-list{
  display: flex;
  flex-direction: row;
  align-content: center;
  text-align: center;
  width: 330rpx;
}
.header-city {
  color: #fff;
  width: 120px;
  font-size: 25rpx;
  padding-top: 5rpx;
}

.header-city-center {
  width: 140px;
  font-size: 30rpx;
  font-style: bold;
  padding-top: 0;
}
.today {
  padding: 50rpx 0 60rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgb(182, 182, 219);
}
.today .weather {
  display: flex;  
  flex-direction:row;
  padding-left: 30rpx;
}
.today .weather .pic {
  width: 100rpx;
  height: 100rpx;
  margin-right: 40rpx;
}
.today .weather .desc{
  display: flex; 
  flex-direction: column; 
  margin-right: 20rpx;
}
.today .weather .desc text {
  color: #fff;
  font-size: 26rpx;
  line-height: 40rpx;
  margin-top: 10rpx;
}
.today .temperature {
  color: #faf9fa;
  font-size: 70rpx;
  margin: 30rpx 0;
  padding-left:40rpx;
}
.today .more {
  color: #faf9fa;
  font-size: 25rpx;
  margin-bottom: 20rpx;
}